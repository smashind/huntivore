<h1><%= @property.title %></h1>

<p><%= @property.description %></p>

<p><strong>Location:</strong> <%= @property.location %></p>
<p><strong>Accommodates:</strong> <%= @property.accommodates %></p>
<p><strong>Price:</strong> $<%= @property.price %>/night</p>

<p><strong>Listed by:</strong> <%= link_to "#{@property.user.full_name}", user_path(@property.user) %></p>

<% if is_owner? @property.user %>
	<%= link_to "Edit property", edit_property_path(@property) %> | <%= link_to "Delete property", @property, method: :delete, data: {confirm: "Are you sure you want to delete this property?"} %>
<% end %>