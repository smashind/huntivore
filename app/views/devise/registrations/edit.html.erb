<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="form-horizontal">
      <fieldset>  
        <legend>Edit your profile</legend>
        <div class="form-group">

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.label :email, "Email address", class: "col-md-4 control-label" %>
            <div class="col-lg-6 col-md-6">
              <%= f.email_field :email, class: "form-control", autofocus: true %>
            </div>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="form-group">
            <%= f.label :password, "Password (leave blank unless you want to change)", class: "col-md-4 control-label" %>
            <div class="col-lg-6 col-md-6">
              <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, "Password Confirmation", class: "col-md-4 control-label" %>
            <div class="col-lg-6 col-md-6">
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :facebook, "Facebook", class: "col-md-4 control-label" %>
            <div class="col-lg-6 col-md-6">
              <%= f.text_field :facebook, class: "form-control", placeholder: "FacebookPage" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :twitter, "Twitter", class: "col-md-4 control-label" %>
            <div class="col-lg-6 col-md-6">
              <%= f.text_field :twitter, class: "form-control", placeholder: "TwitterUsername" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :instagram, "Instagram", class: "col-md-4 control-label" %>
            <div class="col-lg-6 col-md-6">
              <%= f.text_field :instagram, class: "form-control", placeholder: "InstagramUsername" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :website, "Website", class: "col-md-4 control-label" %>
            <div class="col-lg-6 col-md-6">
              <%= f.text_field :website, class: "form-control", placeholder: "http://www.site.com" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :current_password, "Current password (enter to confirm changes)", class: "col-md-4 control-label" %>
            <div class="col-lg-6 col-md-6"> 
            <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
            </div>
          </div>


          <%= f.submit "Update Your Profile", class: "btn btn-primary center-block" %>

          <% end %>
        </div>
      </fieldset>
    </div>

    <h3>Cancel Account</h3>

    <p><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure you want to cancel your account? WARNING: This action is permanent and cannot be undone!" }, method: :delete, class: "btn btn-danger" %></p>

  </div>
</div>
