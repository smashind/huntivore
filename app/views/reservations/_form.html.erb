<div class="form-horizontal reserve">
	<fieldset>
		
	  <div class="form-group">
	  	<div class="form-group">
	  		<div class="col-sm-12 col-xs-12">
	  			<h3>Reserve this Property</h3>
	  		</div>
	  	</div>
	  	<%= form_for(@reservation) do |f| %>
	  	
	  	<div class="form-group">
		  	<div class="col-sm-4 col-xs-4 col-xxs-12">
		  		<div class="input-group">
		  			<span class="input-group-addon"><i class="fa fa-calendar fa-fw"></i></span>
			    	<%= f.text_field :from, class: "form-control", placeholder: "Start" %>
			    </div>
			  </div>

		  	<div class="col-sm-4 col-xs-4 col-xxs-12">
		  		<div class="input-group">
		  			<span class="input-group-addon"><i class="fa fa-calendar fa-fw"></i></span>
		  			<% if Rails.env.test? %>
		  				<%= f.text_field :to, class: "form-control", placeholder: "End" %>
		  			<% else %>
	  		  		<%= f.text_field :to, class: "form-control", placeholder: "End", disabled: "" %>
	  		  	<% end %>
	  		  </div>
			  </div>

			  <div class="col-sm-4 col-xs-4 col-xxs-12">
			  	<div class="input-group">
				  	<span class="input-group-addon"><i class="fa fa-user"></i></span><select class="form-control" id="selectUsers">
		          <option>1</option>
		          <option>2</option>
		          <option>3</option>
		          <option>4</option>
		          <option>5</option>
	          </select>
	        </div>
        </div>
			</div>



			<p>From: <span class="res_from"> </span></p>
			<p>To: <span class="res_to"> </span></p>
			<p>Trip Length: <span class="days"> </span></p>
			<p>Price: <span class="price"> </span></p>

			<%= f.hidden_field :property_id, value: @property.id %>

			<div class="form-group">
				<div class="col-sm-12 col-xs-12">
					<%= f.submit "Reserve this Listing", class: "btn btn-info center-block" %>
		  	</div>
		  </div>

		  <% end %>
	  </div>
	</fieldset>
</div>  	

<script><%= javascript_variables %></script>