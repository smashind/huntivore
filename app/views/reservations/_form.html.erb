
  <div class="form-horizontal reserve">
  	<fieldset>
  		
		  <div class="form-group">
		  	<div class="form-group">
		  		<div class="col-sm-10 col-xs-8">
		  			<h3>Reserve this Property</h3>
		  		</div>
		  	</div>
		  	<%= form_for([@property, @reservation]) do |f| %>
		  	
		  	<div class="form-group">
			  	<div class="col-sm-5 col-xs-4">
				    <%= f.text_field :from, class: "form-control", placeholder: "Start" %>
				  </div>



			  	<div class="col-sm-5 col-xs-4">
				    <%= f.text_field :to, class: "form-control", placeholder: "End"  %>
				  </div>
				</div>

				<div class="form-group">
					<div class="col-sm-10 col-xs-8">
			  		<%= f.submit "Reserve this Listing", class: "btn btn-info center-block" %>
			  	</div>
			  </div>

			  <% end %>
		  </div>
		</fieldset>
	</div>  